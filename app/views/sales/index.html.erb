<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <h2 class="modal-title text-center" id="myModalLabel">Sales Statistics</h2>
</div><!-- .modal-header -->

<div class="modal-body">
  <table class="table table-striped">
    <thead>
      <td># of units shipped</td>
      <td># of units sold</td>
    </thead>
    <tbody class="js-stats">
    </tbody>
  </table>

  <script id="js-stats-template" type="text/ractive">
    {{#items:i}}
      <tr>
        <td>{{ shipped }}</td>
        <td>{{ sold }}<td>
      </tr>
    {{/items}}
  </script>

  <div class="modal-footer">
    <a href="#" data-dismiss="modal" class="btn btn-lg btn-info">Dismiss</a>
  </div><!-- .modal-footer -->
</div><!-- .modal-body -->
